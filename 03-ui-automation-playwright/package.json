{
  "name": "ecommerce_magento_playwright",
  "version": "1.0.0",
  "description": "Professional Playwright automation framework for Magento e-commerce testing (E2E, POM, Flow-based architecture, CI-ready, Allure integrated)",
  "author": "Miray Yilmaz",
  "license": "MIT",
  "scripts": {
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ci": "npx playwright test --reporter=line",
    "test:chromium": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:e2e": "npx playwright test tests/e2e",
    "allure:clean": "rm -rf allure-results allure-report",
    "allure:generate": "allure generate allure-results -o allure-report --clean",
    "allure:open": "allure open allure-report",
    "report": "npm run allure:clean && npm run test && npm run allure:generate && npm run allure:open"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.2.0",
    "allure-playwright": "^3.4.5"
  }
}
